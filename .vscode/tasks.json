{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format Verilog with Verible",
      "type": "shell",
      "command": "verible-verilog-format",
      "args": ["--inplace", "${file}"],
      "problemMatcher": ["$eslint-compact"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
