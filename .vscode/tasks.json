{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format Verilog",
      "type": "shell",
      "command": "verible-verilog-format",
      "args": ["--inplace", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      },
      "runOptions": {
        "reevaluateOnRerun": true
      }
    }
  ]
}
